  gem "byebug"
  gem "capybara"
  gem "codeclimate-test-reporter", require: false
  gem "factory_bot_rails"
  gem "faker"
  gem "poltergeist"
  gem "pry-byebug"
  gem "pry-rails"
  gem "rails-controller-testing"
  gem "rspec-rails"
  gem "simplecov", require: false
end

group :development do
  gem "bullet"
  gem "listen", ">= 3.0.5", "< 3.2"
  gem "rubocop-rails"
  gem "spring"
