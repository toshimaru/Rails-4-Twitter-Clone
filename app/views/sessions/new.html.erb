<% provide(:title, "Log in") %>

<div class="row">
  <div class="col-md-6 col-md-offset-3 one-col">
    <h1>Log in to Twitter Clone</h1>

    <%= form_with url: sessions_path, local: true do |form| %>
      <div class="form-group">
        <%= form.label :email, class: 'control-label' %>
        <%= form.text_field :email, class: 'form-control' %>
      </div>
      <div class="form-group">
        <%= form.label :password, class: 'control-label' %>
        <%= form.password_field :password, class: 'form-control' %>
      </div>
      <%= form.submit "Log in", class: "btn btn-large btn-primary" %>
    <% end %>

    <p>New user? <%= link_to "Sign up", signup_path %></p>
  </div>
</div>
